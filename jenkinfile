pipeline {
    agent { 
        node { label 'master' }
        echo 'Build with maven' 
        }
    tools {
        maven 'MAVEN' 
        jdk 'jdk'
    }
    stages {
        stage('Code Validate') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Code Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
}